@model Libreria.LogicaNegocio.Entidades.Mantenimiento

@{
    ViewData["Title"] = "Create";
}


<h1>Crear un nuevo</h1>

<h4>Mantenimiento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label for="IdCabaña">Cabaña</label>
                <select name="IdCabaña" id="IdCabaña" class="form-control" required>
                    @foreach (var unaCabana in ViewBag.MisCabanas)
                    {
                        <option value="@unaCabana.NumeroHabitacion">@unaCabana.NumeroHabitacion - @unaCabana.Nombre</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="FechaMantenimiento" class="control-label"></label>
                <input asp-for="FechaMantenimiento" class="form-control" required/>
                <span asp-validation-for="FechaMantenimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" required />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Costo" class="control-label"></label>
                <input asp-for="Costo" class="form-control" required />
                <span asp-validation-for="Costo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Trabajador" class="control-label"></label>
                <input asp-for="Trabajador" class="form-control" required />
                <span asp-validation-for="Trabajador" class="text-danger"></span>
            </div>
            <div class="form-group"> 
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<p class="limited-text">@ViewBag.Error</p>


<div>
    <a asp-action="Index">Back to List</a>
</div>

