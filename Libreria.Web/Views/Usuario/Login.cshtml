@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<form action="/Usuario/Login" method="post">
    <input type="email" name="email" placeholder="YouMail@gmail.com" required>
    <input type="password" name="pass" placeholder="You Password" required>
    <input type="submit" value="Ingresar">
</form>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}
